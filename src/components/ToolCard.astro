---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="block p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow">
  <div class="flex items-center mb-4">
    <span class="text-3xl mr-3">{icon}</span>
    <h3 class="text-xl font-bold text-gray-800">{title}</h3>
  </div>
  <p class="text-gray-600">{description}</p>
</a>